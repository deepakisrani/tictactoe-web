<h1>Tic Tac Toe!</h1>
<p>Lets play a game! <%= link_to('Click here to start!', new_game_path) %></p>

<% if @active_games.length > 0%>
<h2>Active Games</h2>
<table class="game-table">
    <thead>
        <tr>
            <td style="border: 1px solid black">Id</td>
            <td>Grid Size</td>
            <td>Continue?</td>
            <td>Finish?</td>
        </tr>
    </thead>
    <tbody>

    <%= render @active_games %>
    
    </tbody>
</table>
<% end %>
